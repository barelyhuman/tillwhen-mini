{% extends "_includes/base.njk" %} {% block content %}
<div class="flex min-h-svh w-full items-center justify-center p-6 md:p-10">
  <div class="w-full max-w-sm">
    <div class="flex flex-col gap-6">
      <div class="card rounded-xl border shadow">
        <div class="flex flex-col space-y-1.5 p-6 text-sm text-muted-foreground">
          <div class="card-title font-semibold leading-none tracking-tight">Login</div>
          Enter your email below to login to your account
        </div>
        <div class="card-body p-6 pt-0">
          <form action="/login" method="post">
            <div class="flex flex-col gap-6">
              <div class="grid gap-2">
                <label htmlFor="email">Email</label>
                <input
                  id="email"
                  name="email"
                  class="input input-bordered"
                  type="email"
                  placeholder="demo@demo.com"
                  required
                />
              </div>
              <div class="grid gap-2">
                <div class="flex items-center">
                  <label htmlFor="password">Password</label>
                  {#
                  <a
                    href="#"
                    class="ml-auto inline-block text-sm underline-offset-4 hover:underline"
                  >
                    Forgot your password?
                  </a>
                  #}
                </div>
                <input
                  id="password"
                  name="password"
                  class="input input-bordered"
                  type="password"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary w-full">Login</button>
            </div>
            <div class="mt-4 text-center text-sm">
              Don't have an account?
              <a href="/signup" class="underline underline-offset-4"> Sign up </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
