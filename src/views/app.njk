{% extends "_includes/base.njk" %} {% block content %}
<div class="flex gap-2">
  <div>{% include "_includes/sidebar.njk" %}</div>
  <div class="p-10">
    <form action="/app" method="post">
      <div class="flex items-end gap-6">
        <div class="grid gap-2">
          <label htmlFor="logTitle">Log title</label>
          <input
            id="logTitle"
            name="logTitle"
            class="input input-bordered"
            type="logTitle"
            placeholder="Log Title"
            required
          />
        </div>

        <div class="grid gap-2">
          <div class="flex items-center">
            <label htmlFor="password">From</label>
          </div>
          <div>
            <input type="date" name="fromDate" class="input input-bordered" />
            <input type="time" name="fromTime" class="input input-bordered" />
          </div>
        </div>
        <div class="grid gap-2">
          <div class="flex items-center">
            <label htmlFor="password">To</label>
          </div>
          <div>
            <input type="date" name="toDate" class="input input-bordered" />
            <input type="time" name="toTime" class="input input-bordered" />
          </div>
        </div>
        <div>
          <button class="btn">Create Log</button>
        </div>
      </div>
    </form>

    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Time Logs</h2>

      {% for log in logs %}
      <div class="flex justify-between border-b py-4">
        <div class="flex flex-col">
          <div class="font-medium">{{ log.title }}</div>
          <div class="flex justify-between items-center">
            <div class="text-gray-600 text-xs">{{ log.durationString }}</div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
